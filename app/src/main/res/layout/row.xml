<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".categories.AllSoundsActivity" ><![CDATA[

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:contextClickable="false"
    android:gravity="center"
    android:weightSum="1">

















    ]]>

    <ImageButton
        android:id="@+id/all_sounds_button"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:scaleType="centerInside"
        android:cropToPadding="false"
        android:layout_weight="0.44"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/unliked_button"
        android:layout_width="48dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:scaleType="centerInside"
        android:visibility="visible"
        android:layout_weight="0.18"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_toRightOf="@+id/all_sounds_button"
        android:layout_marginLeft="22dp"/>

    <ImageButton
        android:id="@+id/share_button"
        android:layout_width="48dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:scaleType="centerInside"
        android:visibility="visible"
        android:layout_weight="0.18"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/all_sounds_button"
        android:layout_toLeftOf="@+id/all_sounds_button"/>
</RelativeLayout>
